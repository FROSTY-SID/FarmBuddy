<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/nav_header_layout"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:background="@drawable/side_nav_bar"
    android:gravity="bottom"
    android:layout_marginTop="50dp"
    android:padding="5dp"
    >

    <LinearLayout
        android:id="@+id/nav_header_sign_in_info"
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:background="@drawable/shape_round"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="5dp"
        android:elevation="@dimen/elevation_less"
        android:layout_gravity="center"
        android:visibility="gone"
        >
        <TextView
            android:id="@+id/nav_header_user_display_name"
            android:textColor="#333"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
           />

        <TextView
            android:id="@+id/nav_header_user_mobile"
            android:textColor="#555"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/nav_header_no_user_signed_in"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:orientation="horizontal"
        android:layout_gravity="center">

        <Button
            android:id="@+id/nav_header_sign_in"
            android:layout_margin="2dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Login"

            android:background="@drawable/shape_round"/>

        <Button
            android:id="@+id/nav_header_register"
            android:layout_margin="2dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="register"
            android:background="@drawable/shape_round"
            />

    </LinearLayout>


</FrameLayout>
